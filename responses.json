            "Let me get one of my Humans to help with your order update",
            ">>do>>escalate"
        ],
        "ISSUE": [
            "Let me get one of my Humans to help with your order issue",
            ">>do>>escalate"
        ],
        "OTHER": [
            ">>msg>>escalate",
            ">>do>>escalate"
        ],
        "FORM_RESPOSNE": [
            "Thanks for placing your order",
            "We received this delivery information:",
            ">>do>>echo"
        ],
        "RESET": [
            "Sure! Starting over! 😁",
            ">>react>>start"
        ]
    },
    "reusables": {
        "notImplemented": "🚔 Busted! We didn't implement this for this demo!",
        "escalate": "Please stand by while I get one of Humans to help you ⏳",
        "deescalate": "I hope my Human was able to help you resolve your query",
        "welcome": "Hi! I'm your self-serve bot, here to help you find what you're looking for!"
    }
